# Dashboard Frontend Environment Variables
# Copy this file to .env for local development or production

# These variables are read at RUNTIME (like backend services)
# No rebuild needed when URLs change!

# Dashboard Backend (BFF) URL
# Local: http://localhost:8010
# Docker: http://backend:8010
# Production: https://your-backend.example.com
DASHBOARD_BACKEND_URL=http://localhost:8010

# Auth Service URL
# Local: http://localhost:8001
# Docker: http://auth:8001
# Production: https://your-auth.example.com
AUTH_SERVICE_URL=http://localhost:8001

# Collector API URL
# Local: http://localhost:8000
# Docker: http://collector:8000
# Production: https://your-collector.example.com
COLLECTOR_URL=http://localhost:8000

# SvelteKit Origin (for CSRF protection in production)
# ORIGIN=https://your-domain.com

# Port (optional, defaults to 3000)
# PORT=3000

