# Collector service environment example
# Copy to `collector/.env` for local development

# Port to serve collector on
COLLECTOR_PORT=8000

# Directory where events and sites are stored (relative to service root)
DATA_DIR=./data

# CORS allowed origins (explicit - no wildcards for security)
# If not set, defaults to localhost URLs for development
COLLECTOR_ALLOWED_ORIGIN_1=http://localhost:5173
COLLECTOR_ALLOWED_ORIGIN_2=http://localhost:3000
COLLECTOR_ALLOWED_ORIGIN_3=http://localhost:8010
